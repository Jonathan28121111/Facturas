@page "/documentos"
@using SistemaFacturas.Modelos
@using SistemaFacturas.Data
@using Microsoft.EntityFrameworkCore
@inject FacturasDbContext DbContext
@rendermode InteractiveServer
@implements IDisposable

<PageTitle>Gestion de Documentos</PageTitle>

<style>
    .container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
    }

    h1 {
        text-align: center;
        margin-bottom: 40px;
        font-size: 2rem;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 25px;
        margin-bottom: 20px;
        background: white;
    }

        .card h2 {
            font-size: 1.3rem;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #eee;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }

    .product-row {
        display: flex;
        gap: 10px;
        margin-bottom: 10px;
        padding: 15px;
        border: 1px solid #eee;
        border-radius: 4px;
        background: #fafafa;
        align-items: flex-start;
        flex-wrap: wrap;
    }

        .product-row input {
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

    .product-name {
        flex: 2;
        min-width: 200px;
    }

    .product-price {
        flex: 1;
        min-width: 100px;
    }

    .product-qty {
        flex: 1;
        min-width: 80px;
    }

    .btn-remove {
        padding: 8px 15px;
        border: 1px solid #ddd;
        background: white;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-remove:hover {
            background: #f5f5f5;
        }

    .subtotal {
        width: 100%;
        text-align: right;
        margin-top: 5px;
        font-size: 0.9rem;
        color: #666;
    }

    .btn {
        padding: 10px 20px;
        border: 1px solid #ddd;
        background: white;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
    }

        .btn:hover {
            background: #f5f5f5;
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background: #eee;
        color: #000;
        border: 1px solid #ddd;
        font-weight: 600;
    }

        .btn-primary:hover {
            background: #ddd;
        }

    .total-box {
        padding: 20px;
        background: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 4px;
        text-align: center;
        margin: 20px 0;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .document-item {
        padding: 15px;
        border: 1px solid #eee;
        border-radius: 4px;
        margin-bottom: 15px;
    }

        .document-item h3 {
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

        .document-item p {
            margin: 5px 0;
            font-size: 0.95rem;
        }

    .product-list {
        margin-top: 10px;
        padding: 10px;
        background: #fafafa;
        border-radius: 4px;
    }

        .product-list ul {
            list-style: none;
            padding: 0;
            margin: 5px 0 0 0;
        }

        .product-list li {
            padding: 3px 0;
            font-size: 0.9rem;
        }

    .empty {
        text-align: center;
        color: #999;
        padding: 40px;
    }
</style>

<div class="container">
    <h1>Sistema de Documentos de Venta</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <h2>Crear Documento</h2>

                <div class="form-group">
                    <label>Fecha</label>
                    <input type="date" @bind="documentoActual.FechaEmision" />
                </div>

                <div class="form-group">
                    <label>Receptor</label>
                    <input type="text" @bind="documentoActual.NombreReceptor" placeholder="Nombre del receptor" />
                </div>

                <div class="form-group">
                    <label>Productos</label>
                    <button class="btn" @onclick="AgregarLinea">+ Agregar Producto</button>
                </div>

                @foreach (var linea in documentoActual.LineasDetalle)
                {
                    <div class="product-row">
                        <input class="product-name" type="text" placeholder="Producto" @bind="linea.NombreProducto" />
                        <input class="product-price" type="number" placeholder="Precio" @bind="linea.PrecioUnitario" step="0.01" />
                        <input class="product-qty" type="number" placeholder="Cant" @bind="linea.CantidadProducto" />
                        <button class="btn-remove" @onclick="() => QuitarLinea(linea)">×</button>
                        <div class="subtotal">Subtotal: $@linea.ImporteLinea.ToString("N2")</div>
                    </div>
                }

                <div class="total-box">
                    Total: $@documentoActual.ImporteTotal.ToString("N2")
                </div>

                <button class="btn btn-primary" @onclick="RegistrarDocumento">
                    Registrar
                </button>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <h2>Documentos Registrados</h2>

                @if (!listaDocumentos.Any())
                {
                    <div class="empty">
                        No hay documentos
                    </div>
                }
                else
                {
                    @foreach (var doc in listaDocumentos.OrderByDescending(d => d.NumeroDocumento))
                    {
                        <div class="document-item">
                            <h3>Documento #@doc.NumeroDocumento</h3>
                            <p><strong>Fecha:</strong> @doc.FechaEmision.ToString("dd/MM/yyyy")</p>
                            <p><strong>Receptor:</strong> @doc.NombreReceptor</p>
                            <p><strong>Total:</strong> $@doc.ImporteTotal.ToString("N2")</p>

                            <div class="product-list">
                                <strong>Productos:</strong>
                                <ul>
                                    @foreach (var linea in doc.LineasDetalle)
                                    {
                                        <li>@linea.NombreProducto - @linea.CantidadProducto × $@linea.PrecioUnitario.ToString("N2")</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@code {
    private DocumentoVenta documentoActual = new DocumentoVenta();
    private List<DocumentoVenta> listaDocumentos = new List<DocumentoVenta>();

    protected override async Task OnInitializedAsync()
    {
        documentoActual.FechaEmision = DateTime.Now;
        documentoActual.LineasDetalle.Add(new ProductoLinea());
        await CargarDocumentos();
    }

    private async Task CargarDocumentos()
    {
        listaDocumentos = await DbContext.Documentos
            .Include(d => d.LineasDetalle)
            .OrderByDescending(d => d.NumeroDocumento)
            .ToListAsync();
    }

    private void AgregarLinea()
    {
        documentoActual.LineasDetalle.Add(new ProductoLinea());
    }

    private void QuitarLinea(ProductoLinea linea)
    {
        if (documentoActual.LineasDetalle.Count > 1)
        {
            documentoActual.LineasDetalle.Remove(linea);
        }
    }

    private async Task RegistrarDocumento()
    {
        if (string.IsNullOrWhiteSpace(documentoActual.NombreReceptor))
        {
            return;
        }

        if (documentoActual.LineasDetalle.Any(l => string.IsNullOrWhiteSpace(l.NombreProducto)))
        {
            return;
        }

        DbContext.Documentos.Add(documentoActual);
        await DbContext.SaveChangesAsync();
        await CargarDocumentos();
        PrepararNuevoDocumento();
    }

    private void PrepararNuevoDocumento()
    {
        documentoActual = new DocumentoVenta
        {
            FechaEmision = DateTime.Now,
            LineasDetalle = new List<ProductoLinea> { new ProductoLinea() }
        };
    }

    public void Dispose()
    {
        DbContext?.Dispose();
    }
}
