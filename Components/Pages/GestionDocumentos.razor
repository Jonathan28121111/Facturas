@page "/documentos"
@using SistemaFacturas.Modelos

<PageTitle>Gestion de Documentos</PageTitle>

<h3>Sistema de Documentos de Venta</h3>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Crear Documento Nuevo</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Fecha de Emision</label>
                    <input type="date" class="form-control" @bind="documentoActual.FechaEmision" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Nombre del Receptor</label>
                    <input type="text" class="form-control" @bind="documentoActual.NombreReceptor" placeholder="Ingrese el nombre completo" />
                </div>

                <h6>Lineas de Productos</h6>
                @foreach (var linea in documentoActual.LineasDetalle)
                {
                    <div class="border p-2 mb-2">
                        <div class="row">
                            <div class="col-md-5">
                                <input type="text" class="form-control form-control-sm" placeholder="Producto" @bind="linea.NombreProducto" />
                            </div>
                            <div class="col-md-3">
                                <input type="number" class="form-control form-control-sm" placeholder="Precio" @bind="linea.PrecioUnitario" step="0.01" />
                            </div>
                            <div class="col-md-2">
                                <input type="number" class="form-control form-control-sm" placeholder="Cant" @bind="linea.CantidadProducto" />
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-danger btn-sm w-100" @onclick="() => QuitarLinea(linea)">X</button>
                            </div>
                        </div>
                    </div>
                }

                <button class="btn btn-secondary btn-sm mb-3" @onclick="AgregarLinea">+ Agregar Linea</button>
            </div>
        </div>
    </div>
</div>

@code {
    private DocumentoVenta documentoActual = new DocumentoVenta();

    protected override void OnInitialized()
    {
        documentoActual.FechaEmision = DateTime.Now;
        documentoActual.LineasDetalle.Add(new ProductoLinea());
    }

    private void AgregarLinea()
    {
        documentoActual.LineasDetalle.Add(new ProductoLinea());
    }

    private void QuitarLinea(ProductoLinea linea)
    {
        if (documentoActual.LineasDetalle.Count > 1)
        {
            documentoActual.LineasDetalle.Remove(linea);
        }
    }
}
